@model List<Activity2_2.Models.ButtonModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Button</title>
</head>
<body>
    <div>
        <h1>Welcome to the page of buttons</h1>
        @Html.Label("Playing with buttons")
        @using (Html.BeginForm("HandleButtonClick", "Button"))
        {
            for (int i = 0; i < Model.Count; i++)
            {
                if (i % 5 == 0)
                {
                    <br />
                }

                <button type="submit" name="mine" value=@i>
                    @if (Model[i].State == true)
                    {
                    <img src="~/Images/on_button.png" />
                    }
                    else
                    {
                    <img src="~/Images/off_button.jpg" />
                    }
                </button>
            }
        }


    </div>
</body>
</html>
